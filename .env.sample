# Fred-LLM Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API Keys
# =============================================================================

# OpenAI API Key (required for OpenAI provider)
OPENAI_API_KEY=your-openai-api-key-here

# Azure OpenAI (optional, if using Azure)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=

# HuggingFace Token (optional, for gated models)
HF_TOKEN=

# =============================================================================
# Local Model Configuration
# =============================================================================

# Local model server URL (for vLLM, Ollama, etc.)
LOCAL_MODEL_URL=http://localhost:8000

# Model cache directory
MODEL_CACHE_DIR=~/.cache/huggingface

# =============================================================================
# Logging & Debug
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable verbose output
VERBOSE=false

# =============================================================================
# Data Paths (optional overrides)
# =============================================================================

# Override default data directories
# DATA_RAW_DIR=./data/raw
# DATA_PROCESSED_DIR=./data/processed
# DATA_PROMPTS_DIR=./data/prompts

# =============================================================================
# Evaluation
# =============================================================================

# Number of test points for numeric evaluation
# NUM_TEST_POINTS=100

# Numeric tolerance for solution comparison
# NUMERIC_TOLERANCE=1e-6
